<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.BuddyLink.Controller.AdminController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2b2b2b; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Admin Panel â€” BuddyLink" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshBtn" onAction="#refresh" text="Refresh" />
            <Button fx:id="deleteBtn" onAction="#deleteSelected" text="Delete Selected" />
            <Button fx:id="resetBtn" onAction="#resetAll" style="-fx-background-color: #ff4c4c; -fx-text-fill: white;" text="Reset All" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Registered Users:" />
            <TableView fx:id="usersTable" prefHeight="400" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="150" text="Name" />
                    <TableColumn fx:id="colEmail" prefWidth="250" text="Email" />
                    <TableColumn fx:id="colOnboarded" prefWidth="100" text="Onboarded" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="500.0" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
         <Button fx:id="closeBtn" onAction="#close" text="Close" />
            <Label style="-fx-text-fill: #555;" text="Server: http://localhost:7070" />
        </HBox>
    </bottom>

</BorderPane>
